<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <appSettings>
    <add key="KafkaInstallationDirectory" value="C:\opt\kafka_2.13-2.8.1" />

    <!-- an additional timeout, in seconds, to make sure services are up and running or have really shut down -->
    <add key="CoolingTimeout" value="5"/>

    <!-- needs to be aligned with ZooKeeper configuration -->
    <add key="ZooKeeperHost" value="127.0.0.1" />
    <add key="ZooKeeperPort" value="2181" />

    <!-- timeout in seconds. The service will wait for port connectivity to be detected before claiming service has started. -->
    <add key="ZooKeeperConnectTimeout" value="10" />
    <add key="ZooKeeperMaxConnectAttemptCount" value="3" />
  </appSettings>
</configuration>
